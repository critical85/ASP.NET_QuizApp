@model QuizApp.Models.Question
@using QuizApp.Models

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionID" />
            <div class="form-group">
                <label asp-for="QusetionRead" class="control-label"></label>
                <input asp-for="QusetionRead" class="form-control" />
                <span asp-validation-for="QusetionRead" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChoiceA" class="control-label"></label>
                <input asp-for="ChoiceA" class="form-control" />
                <span asp-validation-for="ChoiceA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChoiceB" class="control-label"></label>
                <input asp-for="ChoiceB" class="form-control" />
                <span asp-validation-for="ChoiceB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChoiceC" class="control-label"></label>
                <input asp-for="ChoiceC" class="form-control" />
                <span asp-validation-for="ChoiceC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChoiceD" class="control-label"></label>
                <input asp-for="ChoiceD" class="form-control" />
                <span asp-validation-for="ChoiceD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAnswer" class="control-label"></label>
                <select asp-for="CorrectAnswer" asp-items="@Html.GetEnumSelectList<AnswerEnum>()" class="form-control"></select>
                <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="QuizID" class="d-none form-control" asp-items="ViewBag.QuizID">
                <span asp-validation-for="QuizID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Quizzes" asp-action="Index">Back to quiz list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
